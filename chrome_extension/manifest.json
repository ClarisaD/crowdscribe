{
  "manifest_version": 2,

  "name": "Crowdscribe",
  "description": "This extension displays and requests transcripts for media (audio/visual) across the web",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "http://localhost:8080/requests*"
  ],
  "content_security_policy": "script-src 'self' http://localhost:8080/requests*; object-src 'self'"
}